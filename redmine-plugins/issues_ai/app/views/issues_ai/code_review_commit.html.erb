<% html_title "Code review"  %>

<%if @combined_diff %>
<pre><%= @combined_diff %></pre>
<% end %>

<% if @review %>
<h3>Code Review</h3>
<div>
    <%= textilizable(@review) %>
</div>
    <% if @changeset && @previous_review %>
        <%= form_tag '/issues_ai/save_code_review', method: :post do %>
            <%= hidden_field_tag 'commit_hash', @changeset.identifier %>
            <%= hidden_field_tag 'review', @review %>
            <%= hidden_field_tag 'back_url', @back %>
            <%= submit_tag 'Save' %>
        <% end %>
    <% end %>
<% end %>

<% if @previous_review %>
<h3>Previous Code Review</h3>
<div>
    <%= textilizable(@previous_review) %>
</div>
<% end %>

<% if @back%>
<a href="<%= @back %>">Back</a>
<% end %>
